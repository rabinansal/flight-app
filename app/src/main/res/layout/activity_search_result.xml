<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/two_background"
             android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_40sdp">
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:id="@+id/linr_menu"
                     android:layout_weight=".2">

                     <ImageView
                         android:layout_width="@dimen/_25sdp"
                         android:layout_height="@dimen/_25sdp"
                         android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_weight=".6">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="CNN - DEL"
                         android:id="@+id/place"
                         android:textColor="@color/md_white_1000"
                         android:layout_marginStart="@dimen/_10sdp"
                         android:fontFamily="@font/montserrat_semibold"
                         android:textSize="@dimen/_14sdp"/>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:id="@+id/linr_curency"
                     android:visibility="invisible"
                     android:layout_weight=".3">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="$"
                         android:id="@+id/curency_txt"
                         android:fontFamily="@font/montserrat_semibold"
                         android:textColor="@color/md_white_1000"
                         android:textSize="@dimen/_15sdp"/>

                     <ImageView
                         android:layout_width="@dimen/_30sdp"
                         android:layout_height="@dimen/_18sdp"
                         android:layout_marginStart="@dimen/_3sdp"
                         android:scaleType="fitXY"
                         android:src="@drawable/flag_usd"
                         android:id="@+id/flag"/>


                 </LinearLayout>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_35sdp">
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_weight=".1">


                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center|left"
                     android:layout_weight=".3">

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/ic_baseline_date_range_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="12 sep-15 sep"
                         android:id="@+id/date_txt"
                         android:textColor="@color/md_white_1000"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:textSize="@dimen/_12sdp"/>

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_weight=".1">
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/ic_baseline_people_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="3"
                         android:id="@+id/p_count"
                         android:textColor="@color/md_white_1000"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:textSize="@dimen/_12sdp"/>
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:gravity="center"
                     android:layout_weight=".3">
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/ic_baseline_airline_seat_recline_normal_24"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Economy"
                         android:id="@+id/class_type"
                         android:layout_marginLeft="@dimen/_5sdp"
                         android:textColor="@color/md_white_1000"
                         android:textSize="@dimen/_12sdp"/>
                 </LinearLayout>


             </LinearLayout>

         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/error_img"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/error_white"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Result Found"
                android:textColor="@color/md_grey_900"
                android:fontFamily="@font/crimson_semibold"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/crimson_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:id="@+id/change"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Search Results"
                android:textColor="@color/md_black_1000"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/search_no"
                android:visibility="gone"
                android:textSize="@dimen/_13sdp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/search_no"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="10"
                tools:listitem="@layout/item_search_result"
                android:id="@+id/recyclerview"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        />

</RelativeLayout>
